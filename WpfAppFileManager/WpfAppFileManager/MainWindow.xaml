<Window x:Class="WpfAppFileManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Little Manager" Height="500" Width="750"
    Icon="Icons Resource/Folder.ico" SizeChanged="Window_SizeChanged">


    <Grid x:Name="mainGrid" Background="#FFF0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help"/>
        </Menu>

        
        <GridSplitter Grid.Row="1" Grid.Column="1" Width="2" HorizontalAlignment="Left"/>
    </Grid>
</Window>
